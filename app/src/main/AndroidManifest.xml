<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="cl.uc.saludestudiantiluc">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <meta-data android:name="cl.uc.saludestudiantiluc.utils.GlideConfiguration"
                   android:value="GlideModule"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".common.sounds.AmbientalSoundActivity"/>
        <activity android:name=".imageries.ImageryDisplayActivity"></activity>
        <activity android:name=".sequences.ImagesActivity">
        </activity>
        <service
            android:name=".common.sounds.SoundService"
            android:enabled="true"
            android:exported="true"
            android:stopWithTask="false">
        </service>
    </application>

</manifest>