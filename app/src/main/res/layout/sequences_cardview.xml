<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/sequences_card_view_height"
        android:id="@+id/sequenceCardView"
        app:cardElevation="@dimen/card_view_elevation"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/card_view_corner_radius"
        app:cardUseCompatPadding="true"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sequence_card_view_preview"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom|left"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sequence_card_view_name"
                android:textSize="@dimen/card_view_title_size"
                android:text="titulo"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/card_view_text_margin_top_bottom_increased"
                android:layout_marginRight="@dimen/card_view_text_margin_left_right"
                android:layout_marginLeft="@dimen/card_view_text_margin_left_right"
                android:shadowColor="#000"
                android:shadowRadius="10"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sequence_card_view_description"
                android:text="descripcion"
                android:layout_marginRight="@dimen/card_view_text_margin_left_right"
                android:layout_marginLeft="@dimen/sequences_card_view_text_margin_left_right"
                android:textSize="@dimen/card_view_subtitle_size"
                android:textColor="@color/white"
                android:shadowColor="#000"
                android:shadowRadius="10"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/download"
                android:layout_marginTop="@dimen/card_view_text_margin_top_bottom"
                android:layout_marginLeft="@dimen/card_view_button_margin"
                android:layout_marginRight="@dimen/card_view_button_margin"
                android:layout_marginBottom="@dimen/card_view_button_margin"
                android:background="@android:color/transparent"
                android:textColor="@color/white"
                android:shadowColor="#000"
                android:shadowRadius="10"
                android:textStyle="bold"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.design.widget.CoordinatorLayout>
