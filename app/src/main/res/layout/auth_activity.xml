<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="cl.uc.saludestudiantiluc.auth.AuthActivity"
    android:id="@+id/auth_coordinator_layout"
    >
    <ImageView
    android:id="@+id/main_background_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity = "center_vertical|center_horizontal"
        android:id="@+id/auth_progress_bar"
        />
    <android.support.v7.widget.CardView
        android:layout_width="@dimen/auth_card_view_width"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/card_view_elevation"
        android:layout_gravity="center"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/card_view_corner_radius"
        app:cardUseCompatPadding="true"
        android:id="@+id/auth_card_view"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/card_view_text_margin_top_bottom_increased"
            android:layout_marginBottom="@dimen/card_view_text_margin_top_bottom_increased"
            android:layout_marginLeft="@dimen/card_view_text_margin_left_right"
            android:layout_marginRight="@dimen/card_view_text_margin_left_right"
            >
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/auth_email_layout"
                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/auth_email_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/auth_email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/auth_password_layout"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/auth_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/card_view_text_margin_top_bottom"
                    android:hint="@string/auth_password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/auth_register_password_confirmation_layout"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/auth_register_password_confirmation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/card_view_text_margin_top_bottom"
                    android:hint="@string/auth_password_confirmation"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    />
            </android.support.design.widget.TextInputLayout>


            <CheckBox
                android:text="@string/auth_remember_me"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_view_text_margin_top_bottom"
                android:id="@+id/auth_remember_me"
                android:checked="true"/>

            <Button
                android:id="@+id/auth_sign_in_button"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_view_text_margin_top_bottom"
                android:layout_marginRight="@dimen/auth_card_view_bottom_margin_left_right"
                android:layout_marginLeft="@dimen/auth_card_view_bottom_margin_left_right"
                android:text="@string/auth_login"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/auth_register_button"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_view_text_margin_top_bottom"
                android:layout_marginRight="@dimen/auth_card_view_bottom_margin_left_right"
                android:layout_marginLeft="@dimen/auth_card_view_bottom_margin_left_right"
                android:text="@string/auth_register"
                android:textStyle="bold" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.design.widget.CoordinatorLayout>