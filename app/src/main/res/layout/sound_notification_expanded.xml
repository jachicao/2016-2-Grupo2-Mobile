<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sos_notification_card_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sound_notification_icon"
                    android:tint="@color/grey_700"
                    app:srcCompat="@drawable/ic_headset_black_24dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="@string/app_name"
                    android:textColor="@color/grey_700"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/sound_notification_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sonido ambience"
                android:textSize="24sp"
                android:textColor="@color/black"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/sound_notification_previous"
                    android:layout_width="36dp"
                    android:layout_height="32dp"
                    app:srcCompat="@drawable/ic_skip_previous_black_24dp"
                    android:clickable="true"
                    />
                <ImageView
                    android:id="@+id/sound_notification_play_and_pause"
                    android:layout_width="48dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/ic_pause_black_24dp"
                    android:clickable="true"
                    />
                <ImageView
                    android:id="@+id/sound_notification_next"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:srcCompat="@drawable/ic_skip_next_black_24dp"
                    android:clickable="true"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center|right"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/sound_notification_thumbnail"
                app:srcCompat="@drawable/ic_library_music_black_24dp"
                />
        </LinearLayout>
    </FrameLayout>

</FrameLayout>