<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                tools:context="cl.uc.saludestudiantiluc.HomeFragment">

    <TextView
        android:id="@+id/home_start_now_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_start_now"
        android:textColor="#ffffff"
        android:background="#1A000000"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        style="@style/TextAppearance.AppCompat.Title"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/home_start_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@android:color/white"
        app:rippleColor="?attr/colorControlHighlight"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_above="@id/home_start_now_text"
        app:srcCompat="@drawable/ic_relaxing"/>

</RelativeLayout>