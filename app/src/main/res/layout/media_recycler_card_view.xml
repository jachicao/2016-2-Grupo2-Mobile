<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycler_card_view"
        app:cardElevation="@dimen/card_view_elevation"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/card_view_corner_radius"
        app:cardUseCompatPadding="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recycler_card_view_preview"
                    android:adjustViewBounds="true"
                    />
                <FrameLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:background="@color/black_overlay">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/recycler_card_view_name"
                        android:textSize="@dimen/card_view_title_size"
                        android:text="Title"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/card_view_text_margin_reduced"
                        android:layout_marginBottom="@dimen/card_view_text_margin_reduced"
                        android:layout_marginLeft="@dimen/card_view_text_margin"
                        android:layout_marginRight="@dimen/card_view_text_margin"
                        />
                </FrameLayout>
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_card_view_description"
                android:text="Description"
                android:layout_marginTop="@dimen/card_view_text_margin_top_bottom"
                android:layout_marginRight="@dimen/card_view_text_margin_left_right"
                android:layout_marginLeft="@dimen/fragment_recycler_card_view_text_margin_left_right"
                android:layout_marginBottom="@dimen/card_view_text_margin_top_bottom"
                android:textSize="@dimen/card_view_subtitle_size"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download"
                android:id="@+id/recycler_card_view_download_button"
                android:layout_marginLeft="@dimen/card_view_text_margin_top_bottom"
                android:layout_marginRight="@dimen/card_view_text_margin_top_bottom"
                android:layout_marginBottom="@dimen/card_view_button_margin"
                android:background="@android:color/transparent"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>
